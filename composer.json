{
	"name": "codesoup/wppb",
	"type": "wordpress-plugin",
	"license": "MIT",
	"description": "WordPress plugin boilerplate with Webpack dev server, Webpack build script and PSR-4 namespacing",
	"homepage": "https://github.com/code-soup/wordpress-plugin-boilerplate",
    "support": {
        "issues": "https://github.com/code-soup/wordpress-plugin-boilerplate/issues"
    },
	"authors": [
		{
			"name": "Vlado Bosnjak",
			"email": "vb@bobz.co",
			"homepage": "https://www.bobz.co"
		}
	],
	"keywords": [
        "wppb",
		"wordpress",
        "wordpress plugin",
        "wordpress plugin boilerplate"
	],
    "autoload": {
        "psr-4": {
            "wppb\\": "includes/"
        }
    },
	"require": {
		"php": ">=7.3.0",
		"composer/installers": "~1.0"
	},
	"extra": {
		"installer-paths": {
			"vendor/{$name}": ["vendor/package"]
		}
	}
}